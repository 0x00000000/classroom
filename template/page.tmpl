<html>
<head>
    <meta charset="utf-8" />
    
    <link rel="stylesheet" type="text/css" href="{$rootUrl}/css/common.css" />
    
    <script type="text/javascript" src="{$rootUrl}/js/vendor/jquery/jquery-3.3.1.js"></script>
</head>
<body>

    <div class="user">
        {if $user}
        Здравствуйте, {$user->name}.
        <form action="{$rootUrl}/login" method="POST">
            <input name="logout" value="1" type="hidden" />
            <p><input type="submit" value="Выйти" /></p>
        </form>
        {else}
        <a href="{$rootUrl}/login">Войти</a>
        {/if}
    </div>

    <div class="minMenu">
        {foreach $minMenuItems as $item}
            <span><a href="{$item['link']}">{$item['title']}</a></span>
        {/foreach}
    </div>

    <div class="content">
        {$content}
    </div>

</body>
</html>
